<body>
	<% if current_player %>
		Welcome, <%= current_player.email %>
	<% end %>

	<% if flash[:errors] && !flash[:errors].empty? %>
	Sorry, there were the following problems with your registration.
		<ul id="errors">
			<% flash[:errors].each do |error| %>
				<li><%= error %></li>
			<% end %>
		</ul>
	<% end %>
	<%= yield %>
</body>