
<%= @player.name.capitalize %>
</br>

Games played: 
	<%= (@player1_games.count + @player2_games.count) %>
</br>

Player scores:
<% @games.each do |game| %>
		
		<% if game.player1_name == @player.name %>
			Player score:
			<%= game.player_1_score %></br>
		<% else %>
			<% if game.player2_name == @player.name %>
			Player 2 score:
			<%= game.player_2_score %></br>
				<% end %>
		<% end %>
	<% end %>

</br>
WIN OR LOSE</br>
<% @games.each do |game| %>
	<% if game.player1_name == @player.name %>
		<% if game.player_1_score > game.player_2_score %>
			Win
		<% else %>
			Lose
		<% end %>
	<% end %>
<% if game.player2_name == @player.name %>
		<% if game.player_1_score < game.player_2_score %>
			Win
			<% else %>
			Lose
		<% end %>
	<% end %>
<% end %>




